@model IEnumerable<GreenZeta.com.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            alias
        </th>
        <th>
            title
        </th>
        <th>
            caption
        </th>
        <th>
            description
        </th>
        <th>
            link
        </th>
        <th>
            icon
        </th>
        <th>
            banner
        </th>
        <th>
            launchDate
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.alias)
        </td>
